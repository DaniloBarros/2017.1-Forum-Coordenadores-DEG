<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ForumDEG.Views.TestViewUsers">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Admins: "></Label>
            <ListView x:Name="AdministratorListView" HorizontalOptions="FillAndExpand" ItemSelected="AdministratorListView_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" Detail="{Binding Registration}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label Text="Coordinators: "></Label>
            <ListView x:Name="CoordinatorListView" HorizontalOptions="FillAndExpand" ItemSelected="CoordListView_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" Detail="{Binding Registration}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>