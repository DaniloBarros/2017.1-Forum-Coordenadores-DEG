<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ForumDEG.Views.NewForumPage"
             NavigationPage.HasNavigationBar="True"
             Title="Novo Fórum">
    <StackLayout Padding="20">
        <Entry x:Name="titleEntry" Placeholder="Título"/>
        <DatePicker x:Name="dateDatePicker"></DatePicker>
        <TimePicker x:Name="timeTimePicker"></TimePicker>
        <Entry x:Name="placeEntry" Placeholder="Local"/>
        <Label Text="  Pautas:"/>
        <Editor x:Name="schedulesEditor" HeightRequest="150" />
        <StackLayout Orientation="Horizontal" HorizontalOptions="End">
            <Button Text="Cancelar" 
                TextColor="White"
                BackgroundColor="Orange"/>
            <Button Text="Criar fórum" 
                TextColor="White"
                BackgroundColor="Orange"
                Clicked="OnNewForumButtonClicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>