<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ForumDEG.Views.ChangePasswordPage">
    <StackLayout>
        <Label Text="Senha atual" FontAttributes="Bold" />
        <Entry Text="{Binding _actualPassword}" Placeholder="Senha" IsPassword="True"/>
        <Label Text="Nova senha" FontAttributes="Bold" />
        <Entry Text="{Binding _newPassword}" Placeholder="Nova senha" IsPassword="True"/>
        <Entry Text="{Binding _repeatedPassword}" Placeholder="Novamente" IsPassword="True"/>
        <Button Text="Trocar Senha" Command="{Binding ChangePasswordClickedCommand}" />
    </StackLayout>
</ContentPage>